#!/usr/bin/env bash
# Checks domain and subdomain
# Function to display information about a subdomain
get_subdomain_info() {
    local domain=$1
    local subdomain=$2
    local fqdn="${subdomain}.${domain}"

    # Use dig to get the DNS record
    local record=$(dig +short "$fqdn")
    local record_type=$(dig +short -t ANY "$fqdn" | awk '{print $4}' | head -n 1)
    
    if [[ -z $record ]]; then
        echo "The subdomain ${subdomain} does not exist or has no DNS records."
    else
        echo "The subdomain ${subdomain} is a ${record_type} record and points to ${record}"
    fi
}

# Check if domain argument is provided
if [[ -z $1 ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

domain=$1
subdomain=$2

# If subdomain is provided, display information for that subdomain
if [[ -n $subdomain ]]; then
    get_subdomain_info $domain $subdomain
else
    # If no subdomain is provided, display information for the default subdomains
    for sub in www lb-01 web-01 web-02; do
        get_subdomain_info $domain $sub
    done
fi
